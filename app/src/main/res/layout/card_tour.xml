<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="320dp"
            android:layout_height="166dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/conchal" />
        <ImageView
            android:id="@+id/favoriteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nofavorite" />

        <TextView
            android:id="@+id/avatarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="PLAYA CONCHAL"
            android:textColor="@color/color_text"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-40dp">

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:transformPivotX="0dp" />

            <TextView
                android:id="@+id/lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-160dp"
                android:text="Guanacaste, Costa Rica "
                android:textColor="@color/color_text"
                android:textSize="12sp"
                android:textStyle="bold" />

        </TableRow>

        <TextView
            android:id="@+id/countOpiniones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Opiniones: 28922"
            android:textColor="@color/text_gris"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="5dp"
                android:text="$120"
                android:textColor="@color/text_green"
                android:textSize="20sp"
                android:textStyle="bold" />


        </TableRow>

    </LinearLayout>
</androidx.cardview.widget.CardView>
